<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="60dp"
    android:orientation="vertical">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/imageIcon1"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:scaleX="1.0"
            android:scaleY="1.0"
            android:background="@drawable/telemetry_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tag_name_textview"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_weight="2"
            android:contentDescription="Component Unique indentifier"
            android:text="ARS_TS101"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/imageIcon1"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/value_textview"
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="13dp"
            android:layout_weight="1"
            android:text=" 68.5 F "
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/tag_name_textview"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/title_textView"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="#2204F8"
            android:text="Title"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/imageIcon1"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>
